% layout 'default';
<% if (my $message = flash 'message' ) { %>
	<b><%= $message %></b><br />
<% } %>
<!-- Welcome! You're now known as <%= $user %>.<br /> -->
Welcome! You're now known as <%= session 'name' or "Anonymous"%>.<br />
<% if (session 'name') { %>
	<a href="<%= url_for 'logout' %>">Logout <%= session 'name' %></a>
<% } else { %>
	<a href="<%= url_for 'login' %>">Login</a>
<% } %>
